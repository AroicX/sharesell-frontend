{
  "moduleResolution": "node",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/services/*": ["services/*"],
      "@/helpers/*": ["helpers/*"],
      "@/reusable/*": ["reusable/*"],
      "@/styles/*": ["/styles/*"]
    }
  },
  "exclude": ["node_modules", ".next"]
}
